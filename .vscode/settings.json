{
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "python.defaultInterpreterPath": "./venv/bin/python",
    "editor.inlineSuggest.enabled": true,
    "python.envFile": "./.env",
    "editor.guides.indentation": true,
    "[python]": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.fixAll": "explicit",
            "source.organizeImports": "explicit"
        },
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.rulers": [80],
        "editor.insertSpaces": true,
        "editor.tabSize": 4,
        "editor.formatOnPaste": false,
        "editor.formatOnSaveMode": "file",
        "editor.formatOnType": true,
    },
    "files.exclude": {
        "**/.venv**": true,
        "**/venv**": true,
        "**/__pycache__": true,
        "out": true,
        "dist": true,
        "**/*.pyc": true,
        ".nyc_output": true,
        "obj": true,
        "bin": true,
        "**/node_modules": true,
        ".vscode-test": false,
        ".vscode test": false,
        "**/.mypy_cache/**": true,
        "**/.pytest_cache/**": true,
        "**\/CVS": true,
        "**\/.DS_Store": true,
        "**\/.hg": true,
        "**\/.svn": true,
        "**\/.git": false,
        "node_modules": true
    },
    "search.exclude": {
        "**/.venv**": true,
        "**/venv**": true,
        "**/__pycache__": true,
        "out": true,
        "dist": true,
        "**/node_modules": true,
        "coverage": true,
        "languageServer*/**": true,
        ".vscode-test": true,
        ".vscode test": true,
        "**/.pytest_cache/**": true,
        "**\/CVS": true,
        "**\/.DS_Store": true,
        "**\/.hg": true,
        "**\/.svn": true,
        "**\/.git": true,
        "node_modules": true
    },
    "python.testing.unittestArgs": [
        "-v",
        "-s",
        "./apps",
        "-p",
        "test_*.py"
    ],
    "python.testing.pytestEnabled": false,
    "python.testing.unittestEnabled": true,
    "editor.defaultFormatter": "charliermarsh.ruff",
    "[django-html]": {
        "editor.defaultFormatter": "charliermarsh.ruff"
    },
    "ruff.lineLength": 80,
}
